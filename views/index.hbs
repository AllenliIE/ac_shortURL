<div class="container text-start" style="width:30rem;">
  {{#if shortURL}}
  <h3>Success! Please use this link:</h3>
  <a href="/" class="shortURL" style="text-decoration: none;">{{origin}}/{{shortURL}}</a>
  <br>
  <div class="text-center">
    <button type="button" class="copy btn btn-primary m-2">Copy</button>
  </div>
  {{else}}
  <form action="/" method="POST">
    <input class="form-control" type="url" name="url" placeholder="Input URL here" style="background-color:#F5F5F5"
      required>
    <button class="btn btn-outline-primary mt-4" type="submit" style="width:50%;">Shorten</button>
  </form>
  {{/if}}
</div>